{{yield}}

<form class="form-horizontal" style="color: #0a0a0a">
    <fieldset>

        <!-- Form Name -->
        <legend>Peer Reviewer Profile</legend>
        <div style="color: royalblue"> *Please complete your Reviewer profile. This will be connected to your OSF account.</div>
        <!-- Text input-->
        <div class="form-group" >
            <label class="col-md-4 control-label" for="textinput">Name</label>
            <div class="col-md-6">
                <div>{{textarea value=model.name cols="60" rows="1"}} </div>

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Affiliation</label>
            <div class="col-md-6">
                <div>{{textarea value=model.affiliation cols="60" rows="1"}} </div>

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Research Area(s)</label>
            <div class="col-md-6">
                <<div>{{textarea value=model.research cols="60" rows="1"}} </div>

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group" >
            <label class="col-md-4 control-label" for="textinput">Website</label>
            <div class="col-md-6">
                <div>{{textarea value=model.website cols="60" rows="1"}} </div>

            </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textarea">Bio</label>
            <div class="col-md-8">
                <div>{{textarea value=model.bio cols="80" rows="5"}} </div>

            </div>
        </div>

        <!-- File Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="filebutton">Profile Picture</label>
            <div class="col-md-4">
                <input id="filebutton" name="filebutton" class="input-file" type="file">
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-4">
                <a {{action "saveReviewer" model}} class="btn btn-success" type="submit">Submit</a>
                <a {{action "cancel"}} class="btn btn-danger">Not now!</a>
            </div>
        </div>


    </fieldset>
</form>