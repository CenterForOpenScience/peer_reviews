<html>
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8"/>
    <meta name="google-site-verification" content="BFNbseofFcxRL75jeKcC5vz5BqorW18gQEDx0vK7DKc"/>
    <title>COS | Center for Open Science News</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <meta content="The Center for Open Science's home for news and press updates." name="description"/>
    <meta content="Johanna Cohoon" name="author"/>
    <meta property="og:image" content="http://centerforopenscience.org/static/img/cos_center_logo_small.png"/>
    <link href="/static/favicon.ico" rel="shortcut icon">
    <!-- BEGIN THEME STYLES -->
    <link rel="stylesheet" href="assets/vendor.css">
    <!-- END THEME STYLES -->
    <!-- END HEAD -->
</head>
<body>
<div class="page-container">
    <!-- BEGIN CONTAINER -->
    <div class="container min-hight margin-top-50">
        <h1><strong>Peer Reviews Dashboard</strong></h1>
        <p class="lead">What conferences am I involved with? Read about conferences, pore over submissions, and evaluate
            them below.</p>
        <!--END DESCRIPTION-->
        <div id="search">
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
            </form>
        </div>
        <div id="filter">
            <div style="display:inline;">
                <label for="view">View:</label>
                <select>
                    <option value="all">All</option>
                    <option value="pending">Pending</option>
                    <option value="complete">Complete</option>
                </select>
            </div>
            <div style="display:inline;">
                <label for="view">Sort by:</label>
                <select>
                    <option value="deadline">Deadline</option>
                    <option value="name">Name</option>
                    <option value="notifications">Notifications</option>
                </select>
            </div>
        </div>
        <p><br></p>
        <div class="loading-msg text-center">
            <img alt="spinner" src="/assets/images/spinner.gif">
            <p>Loading conferences</p>
        </div>
        <div id="wrapper">
            <div id="columns">
                {{#each model as |conference|}}
                    <!-- {{conference.description}} -->
                    <div class="pin">
                        <a href={{conference.website}}><img src={{conference.logo}} width="125">
                            <p>
                                {{conference.title}}
                            <p class="text-left">{{conference.closeDate}}</p>
                            </p></a>
                    </div>
                {{/each}}
            </div>
        </div>
    </div><!-- BEGIN PAGE CONTAINER -->
</div>
</body>
</html>

{{outlet}}
